
  <%= form_for @page, { multipart: true } do |f| %>
    <% if @page.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

        <ul>
        <% @page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :headline %><br>
      <%= f.text_field :headline, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :color, "Headline Color" %><br>
      <%= f.text_field :color, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :buttoncolor, "Button Color" %><br>
      <%= f.select :buttoncolor, options_for_select([['primary'],['default'],['success'],['info'],['warning'],['danger']]), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :buttontext, "Button Text" %><br>
      <%= f.text_field :buttontext, class: "form-control" %>
      <br>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    
    </div>
    <br>
    <div class="actions">
      <%= f.submit class: "btn btn-lg btn-success" %>
    </div>
  <% end %>
